{
  "name": "@elsie/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "db:migrate:generate": "drizzle-kit generate --config src/constants/drizzle-migrate.config.ts",
    "db:migrate:up": "drizzle-kit migrate --config src/constants/drizzle-migrate.config.ts",
    "db:seed:generate": "drizzle-kit generate --config src/constants/drizzle-seed.config.ts",
    "db:seed:up": "drizzle-kit migrate --config src/constants/drizzle-seed.config.ts",
    "dev": "tsx --watch --watch-preserve-output src/index.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@elsie/models": "workspace:*",
    "@trpc/server": "^11.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.5",
    "@types/qs": "^6.14.0",
    "drizzle-kit": "^0.31.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6"
  }
}
